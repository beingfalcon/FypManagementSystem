<div>
    <form name="regForm" action="/users/updateUser" method="post" onsubmit="return validateForm()">
        <div class="form-group">
            <input value="<%= data[0].id %>" class="form-control" type="hidden" id="id" name="id">
            <label for="fname">First Name</label>
            <input value="<%= data[0].fname %>" class="form-control" type="text" id="fname" name="fname" placeholder="Enter Your First Name..">

            <label for="lname">Last Name</label>
            <input value="<%= data[0].lname %>" class="form-control" type="text" id="lname" name="lname" placeholder="Enter Your Last Name..">
            <label for="profilePic">Profile Picture</label>
            <input value="<%= data[0].profilePic %>" class="form-control" type="text" id="profilePic" name="profilePic">

            <br>
            <label for="birthday">Birthday:</label>
            <br>
            <input value="<%= data[0].birthday %>" class="form-control" type="date" id="birthday" name="birthday">
            <br>
            <br>

            <label for="username">Username</label>
            <input value="<%= data[0].username %>" class="form-control" type="text" id="username" name="username" placeholder="Enter Username..">

            <label for="email">Email</label>
            <input value="<%= data[0].email %>" class="form-control" type="text" id="email" name="email" placeholder="Enter Your Email..">

            <label for="phone">Phone No</label>
            <h4>Use any of following format</h4>
            <ul>
                <li>
                    123-345-3456
                </li>
                <li>
                    (078)789-8908
                </li>
                <li>
                    (078) 789-8908 'Note the space'
                </li>
            </ul>
            <input value="<%= data[0].phone %>" class="form-control" type="text" id="phone" name="phone" placeholder="Enter Your Phone Number..">
            <br>
            <label for="country">Country</label>
            <select name="country" id="country" value="<%= data[0].country %>">
                <option value="">Select Country</option>
                <option value="pakistan">Pakistan</option>
                <option value="usa">USA</option>
                <option value="england">England</option>
            </select>

            <label for="password">New Password</label>
            <h4>Passsowrd Must Contain</h4>
            <ul>
                <li>
                    password between 7 to 20 characters
                </li>
                <li>
                    least one numeric digit
                </li>
                <li>
                    a special character
                </li>
            </ul>
            <input type="password" id="password" name="password" placeholder="Enter Your Password Here.." class="form-control">
            <label for="oldpassword">Old Password</label>
            <input type="password" id="oldpassword" name="oldpassword" placeholder="Enter Your Old Password Here.." class="form-control">

            <input class="btn btn-primary" type="submit" value="Submit">
        </div>
    </form>
</div>
<script src="/public/js/validateForm.js"></script>